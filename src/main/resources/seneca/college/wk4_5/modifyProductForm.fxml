<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seneca.college.wk4_5.controller.ModifyProductController" prefWidth="900" prefHeight="600">
    <children>
        <!-- Title -->
        <Label layoutX="20.0" layoutY="20.0" text="Modify Product">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <!-- Left Side - Product Information -->
        <VBox layoutX="30.0" layoutY="70.0" spacing="15" prefWidth="350">
            <children>
                <!-- Product ID Field -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="ID:" prefWidth="80.0" />
                        <TextField fx:id="idField" disable="true" prefWidth="200.0" promptText="Auto Generated" />
                    </children>
                </HBox>

                <!-- Product Name Field -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Name:" prefWidth="80.0" />
                        <TextField fx:id="nameField" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Inventory Level Field -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Inv:" prefWidth="80.0" />
                        <TextField fx:id="invField" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Price Field -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Price:" prefWidth="80.0" />
                        <TextField fx:id="priceField" prefWidth="200.0" />
                    </children>
                </HBox>

                <!-- Max and Min Fields -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Max:" prefWidth="80.0" />
                        <TextField fx:id="maxField" prefWidth="80.0" />
                        <Label text="Min:" prefWidth="40.0" />
                        <TextField fx:id="minField" prefWidth="80.0" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Right Side - Parts Management -->
        <VBox layoutX="450.0" layoutY="70.0" spacing="15" prefWidth="420">
            <children>
                <!-- Search Section -->
                <VBox spacing="10">
                    <children>
                        <Label text="Search Parts to Add:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <children>
                                <TextField fx:id="partSearchField" prefWidth="250.0" promptText="Search by Part ID or Name" />
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchParts" text="Search" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Available Parts Table -->
                <VBox spacing="5">
                    <children>
                        <Label text="Available Parts:" />
                        <TableView fx:id="availablePartsTable" prefHeight="150.0" prefWidth="400.0">
                            <columns>
                                <TableColumn fx:id="availablePartIdColumn" prefWidth="60.0" text="Part ID" />
                                <TableColumn fx:id="availablePartNameColumn" prefWidth="100.0" text="Part Name" />
                                <TableColumn fx:id="availablePartInventoryColumn" prefWidth="80.0" text="Inventory Level" />
                                <TableColumn fx:id="availablePartPriceColumn" prefWidth="80.0" text="Price/ Cost per Unit" />
                            </columns>
                        </TableView>
                        <Button fx:id="addPartButton" mnemonicParsing="false" onAction="#onAddPart" text="Add" prefWidth="100.0" />
                    </children>
                </VBox>

                <!-- Associated Parts Table -->
                <VBox spacing="5">
                    <children>
                        <Label text="Associated Parts:" />
                        <TableView fx:id="associatedPartsTable" prefHeight="150.0" prefWidth="400.0">
                            <columns>
                                <TableColumn fx:id="associatedPartIdColumn" prefWidth="60.0" text="Part ID" />
                                <TableColumn fx:id="associatedPartNameColumn" prefWidth="100.0" text="Part Name" />
                                <TableColumn fx:id="associatedPartInventoryColumn" prefWidth="80.0" text="Inventory Level" />
                                <TableColumn fx:id="associatedPartPriceColumn" prefWidth="80.0" text="Price/ Cost per Unit" />
                            </columns>
                        </TableView>
                        <Button fx:id="removeAssociatedPartButton" mnemonicParsing="false" onAction="#onRemoveAssociatedPart" text="Remove Associated Part" prefWidth="180.0" />
                    </children>
                </VBox>
            </children>
        </VBox>

        <!-- Action Buttons -->
        <HBox layoutX="650.0" layoutY="550.0" spacing="15" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSave" text="Save" prefWidth="100.0" />
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" text="Cancel" prefWidth="100.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>