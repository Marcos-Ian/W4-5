<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="seneca.college.wk4_5.controller.LoginController"
            prefWidth="450" prefHeight="380">
    <children>
        <VBox alignment="CENTER" spacing="15"
              AnchorPane.leftAnchor="60.0"
              AnchorPane.rightAnchor="60.0"
              AnchorPane.topAnchor="30.0">
            <children>
                <Label text="Inventory Management System">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>

                <Label text="Please sign in to continue">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <Region prefHeight="5.0" />

                <!-- Username -->
                <VBox spacing="8" prefWidth="280.0">
                    <children>
                        <Label text="Username:" />
                        <TextField fx:id="usernameField"
                                   prefWidth="280.0"
                                   prefHeight="35.0"
                                   promptText="admin or user" />
                    </children>
                </VBox>

                <!-- Password -->
                <VBox spacing="8" prefWidth="280.0">
                    <children>
                        <Label text="Password:" />
                        <PasswordField fx:id="passwordField"
                                       prefWidth="280.0"
                                       prefHeight="35.0"
                                       promptText="admin123 or user123" />
                    </children>
                </VBox>

                <Region prefHeight="5.0" />

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button onAction="#handleLogin" prefWidth="120.0" prefHeight="35.0" text="Login" style="-fx-font-size: 13px;" />
                        <Button onAction="#handleCancel" prefWidth="120.0" prefHeight="35.0" text="Cancel" style="-fx-font-size: 13px;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
